<h2>スケジュール詳細</h2>

<table>
    <tr>
        <th>タイトル</th>
        <td><%= @user.title %></td>
    </tr>
    <tr>
        <th>開始日</th>
        <td><%= @user.start %></td>
    </tr>
    <tr>
        <th>終了日</th>
        <td><%= @user.end %></td>
    </tr>
    <tr>
        <th>作成日</th>
        <td><%= @user.created_at.to_s(:datetime_jp) %></td>
    </tr>
    <tr>
        <th>メモ</th>
        <td><%= @user.introduction %></td>
    </tr>
</table>

<div>
    <ul>
        <li><%= link_to "スケジュール一覧に戻る", :users %></li>
    </ul>
</div>